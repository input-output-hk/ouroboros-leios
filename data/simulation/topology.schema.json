{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Cluster": {
      "properties": {
        "cluster": {
          "type": "string"
        }
      },
      "type": "object"
    },
    "LinkInfo": {
      "description": "Link information.",
      "properties": {
        "bandwidth-bytes-per-second": {
          "additionalProperties": false,
          "properties": {},
          "type": "number"
        },
        "latency-ms": {
          "type": "number"
        }
      },
      "type": "object"
    },
    "Node<Cluster>": {
      "description": "A node.",
      "properties": {
        "adversarial": {
          "$ref": "#/definitions/UnboundedIbs",
          "description": "If not null, the node will behave according to the given Behaviour.\n\nOnly supported by Haskell simulation."
        },
        "cpu-core-count": {
          "additionalProperties": false,
          "properties": {},
          "type": "number"
        },
        "location": {
          "$ref": "#/definitions/Cluster"
        },
        "producers": {
          "additionalProperties": {
            "$ref": "#/definitions/LinkInfo"
          },
          "type": "object"
        },
        "stake": {
          "additionalProperties": false,
          "properties": {},
          "type": "number"
        }
      },
      "type": "object"
    },
    "Node<Coord2D>": {
      "description": "A node.",
      "properties": {
        "adversarial": {
          "$ref": "#/definitions/UnboundedIbs",
          "description": "If not null, the node will behave according to the given Behaviour.\n\nOnly supported by Haskell simulation."
        },
        "cpu-core-count": {
          "additionalProperties": false,
          "properties": {},
          "type": "number"
        },
        "location": {
          "items": [
            {
              "type": "number"
            },
            {
              "type": "number"
            }
          ],
          "maxItems": 2,
          "minItems": 2,
          "type": "array"
        },
        "producers": {
          "additionalProperties": {
            "$ref": "#/definitions/LinkInfo"
          },
          "type": "object"
        },
        "stake": {
          "additionalProperties": false,
          "properties": {},
          "type": "number"
        }
      },
      "type": "object"
    },
    "UnboundedIbs": {
      "description": "A node that after some time stops respecting IB sortition and\ninstead starts generating old IBs every slot.\n\nOnly supported by Haskell simulation.",
      "properties": {
        "behaviour": {
          "const": "unbounded-ibs",
          "type": "string"
        },
        "ibs-per-slot": {
          "type": "number"
        },
        "slot-of-generated-ibs": {
          "type": "number"
        },
        "starting-at-slot": {
          "type": "number"
        }
      },
      "type": "object"
    }
  },
  "description": "The topology for a Leios simulation.\n\nThe nodes in a topology may either specify their location as cluster names,\nwhich may be omitted, or as coordinates, but all nodes in the topology must\nuse the same kind of location.",
  "properties": {
    "nodes": {
      "anyOf": [
        {
          "additionalProperties": {
            "$ref": "#/definitions/Node<Cluster>"
          },
          "type": "object"
        },
        {
          "additionalProperties": {
            "$ref": "#/definitions/Node<Coord2D>"
          },
          "type": "object"
        }
      ]
    }
  },
  "type": "object"
}
