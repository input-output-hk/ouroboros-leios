{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "BlockEventType": {
      "enum": [
        "EBGenerated",
        "IBGenerated",
        "RBGenerated",
        "VTBundleGenerated"
      ],
      "type": "string"
    },
    "BlockRef": {
      "properties": {
        "id": {
          "type": "string"
        }
      },
      "required": ["id"],
      "type": "object"
    },
    "CpuEvent": {
      "properties": {
        "cpu_time_s": {
          "type": "number"
        },
        "id": {
          "type": "string"
        },
        "node": {
          "type": "string"
        },
        "task_type": {
          "$ref": "#/definitions/CpuTaskType"
        },
        "type": {
          "const": "Cpu",
          "type": "string"
        }
      },
      "required": ["cpu_time_s", "id", "node", "task_type", "type"],
      "type": "object"
    },
    "CpuTaskType": {
      "enum": [
        "GenEB",
        "GenIB",
        "GenRB",
        "GenVote",
        "ValEB",
        "ValIB",
        "ValIH",
        "ValRB",
        "ValRH",
        "ValTX",
        "ValVote"
      ],
      "type": "string"
    },
    "Endorsement": {
      "properties": {
        "eb": {
          "$ref": "#/definitions/BlockRef"
        }
      },
      "required": ["eb"],
      "type": "object"
    },
    "Event": {
      "anyOf": [
        {
          "$ref": "#/definitions/CpuEvent"
        },
        {
          "$ref": "#/definitions/GeneratedInputBlock"
        },
        {
          "$ref": "#/definitions/GeneratedEndorserBlock"
        },
        {
          "$ref": "#/definitions/GeneratedRankingBlock"
        },
        {
          "$ref": "#/definitions/GeneratedVote"
        },
        {
          "$ref": "#/definitions/SentEvent"
        },
        {
          "$ref": "#/definitions/ReceivedEvent"
        },
        {
          "$ref": "#/definitions/SlotEvent"
        },
        {
          "$ref": "#/definitions/NoBlockEvent"
        }
      ]
    },
    "GeneratedEndorserBlock": {
      "properties": {
        "endorser_blocks": {
          "items": {
            "$ref": "#/definitions/BlockRef"
          },
          "type": "array"
        },
        "id": {
          "type": "string"
        },
        "input_blocks": {
          "items": {
            "$ref": "#/definitions/BlockRef"
          },
          "type": "array"
        },
        "pipeline": {
          "type": "number"
        },
        "producer": {
          "type": "string"
        },
        "size_bytes": {
          "type": "number"
        },
        "slot": {
          "type": "number"
        },
        "type": {
          "$ref": "#/definitions/BlockEventType"
        }
      },
      "required": [
        "endorser_blocks",
        "id",
        "input_blocks",
        "pipeline",
        "producer",
        "size_bytes",
        "slot",
        "type"
      ],
      "type": "object"
    },
    "GeneratedInputBlock": {
      "properties": {
        "id": {
          "type": "string"
        },
        "pipeline": {
          "type": "number"
        },
        "producer": {
          "type": "string"
        },
        "rb_ref": {
          "type": ["null", "string"]
        },
        "size_bytes": {
          "type": "number"
        },
        "slot": {
          "type": "number"
        },
        "tx_payload_bytes": {
          "type": "number"
        },
        "type": {
          "$ref": "#/definitions/BlockEventType"
        }
      },
      "required": [
        "id",
        "pipeline",
        "producer",
        "size_bytes",
        "slot",
        "tx_payload_bytes",
        "type"
      ],
      "type": "object"
    },
    "GeneratedRankingBlock": {
      "properties": {
        "endorsement": {
          "anyOf": [
            {
              "$ref": "#/definitions/Endorsement"
            },
            {
              "type": "null"
            }
          ]
        },
        "endorsements": {
          "anyOf": [
            {
              "items": {
                "$ref": "#/definitions/Endorsement"
              },
              "type": "array"
            },
            {
              "type": "null"
            }
          ]
        },
        "id": {
          "type": "string"
        },
        "parent": {
          "anyOf": [
            {
              "$ref": "#/definitions/BlockRef"
            },
            {
              "type": "null"
            }
          ]
        },
        "producer": {
          "type": "string"
        },
        "size_bytes": {
          "type": "number"
        },
        "slot": {
          "type": "number"
        },
        "tx_payload_bytes": {
          "type": "number"
        },
        "type": {
          "$ref": "#/definitions/BlockEventType"
        }
      },
      "required": [
        "endorsement",
        "id",
        "parent",
        "producer",
        "size_bytes",
        "slot",
        "tx_payload_bytes",
        "type"
      ],
      "type": "object"
    },
    "GeneratedVote": {
      "properties": {
        "id": {
          "type": "string"
        },
        "pipeline": {
          "type": "number"
        },
        "producer": {
          "type": "string"
        },
        "size_bytes": {
          "type": "number"
        },
        "slot": {
          "type": "number"
        },
        "type": {
          "$ref": "#/definitions/BlockEventType"
        },
        "votes": {
          "additionalProperties": {
            "type": "number"
          },
          "type": "object"
        }
      },
      "required": [
        "id",
        "pipeline",
        "producer",
        "size_bytes",
        "slot",
        "type",
        "votes"
      ],
      "type": "object"
    },
    "NoBlockEvent": {
      "properties": {
        "node": {
          "type": "string"
        },
        "slot": {
          "type": "number"
        },
        "type": {
          "$ref": "#/definitions/NoBlockEventType"
        }
      },
      "required": ["node", "slot", "type"],
      "type": "object"
    },
    "NoBlockEventType": {
      "enum": ["NoEBGenerated", "NoIBGenerated", "NoVTBundleGenerated"],
      "type": "string"
    },
    "ReceivedEvent": {
      "properties": {
        "id": {
          "type": "string"
        },
        "ids": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "recipient": {
          "type": "string"
        },
        "sender": {
          "type": "string"
        },
        "type": {
          "enum": [
            "EBReceived",
            "IBReceived",
            "RBReceived",
            "VTBundleReceived"
          ],
          "type": "string"
        }
      },
      "required": ["id", "recipient", "type"],
      "type": "object"
    },
    "SentEvent": {
      "properties": {
        "id": {
          "type": "string"
        },
        "ids": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "msg_size_bytes": {
          "type": "number"
        },
        "recipient": {
          "type": "string"
        },
        "sender": {
          "type": "string"
        },
        "sending_s": {
          "type": "number"
        },
        "type": {
          "enum": ["EBSent", "IBSent", "RBSent", "VTBundleSent"],
          "type": "string"
        }
      },
      "required": ["id", "msg_size_bytes", "recipient", "sender", "type"],
      "type": "object"
    },
    "SlotEvent": {
      "properties": {
        "node": {
          "type": "string"
        },
        "slot": {
          "type": "number"
        },
        "type": {
          "const": "Slot",
          "type": "string"
        }
      },
      "required": ["node", "slot", "type"],
      "type": "object"
    }
  },
  "description": "Base simulation trace format",
  "properties": {
    "message": {
      "$ref": "#/definitions/Event"
    },
    "time_s": {
      "type": "number"
    }
  },
  "required": ["message", "time_s"],
  "type": "object"
}
